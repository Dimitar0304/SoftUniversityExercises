@model ProductViewModel;


<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control"placeholder="Write your product name here" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control"placeholder="Write your product price here" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Add" />
    </form>
</div>
